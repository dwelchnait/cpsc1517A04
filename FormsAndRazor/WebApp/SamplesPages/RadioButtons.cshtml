@{
    Layout = "~/_Layout.cshtml";
    Page.Title = string.Format("Razor - {0}", "RadioButtons");
    string languagegroup = Request.Form["LanguageGroup"]; //value attribute
    string scriptgroup = Request.Form["ScriptGroup"];
}

@section banner{
    <h1>RadioButtons on Form</h1>
}

@* place any processing where the generate html will show up
    above the form on the final html page*@

@if (IsPost)
{
    //if a choice for a group was NOT made the variable for that
    //   group will be empty
    if (languagegroup.IsEmpty() || scriptgroup.IsEmpty())
    {
        <p><span style="color:firebrick">Make a selection from each of the groups.</span></p>
    }
    else
    {
        if (languagegroup.Equals("C#", StringComparison.OrdinalIgnoreCase))
        {
            <p>You will greatly enjoy the CPSC1517 course as we use C#.</p>
        }
        else
        {
            <p>Too Bad. Unfortunately the CPSC1517 course does not use @languagegroup</p>
        }
        if (scriptgroup.Equals("Razor", StringComparison.OrdinalIgnoreCase))
        {
            <p>You will greatly enjoy the CPSC1517 course as we use Razor.</p>
        }
        else
        {
            <p>Too Bad. Unfortunately the CPSC1517 course does not use @scriptgroup</p>
        }
    }

}
else
{
    //this else path is executed when the page is 1st processed
    //this is a place to put initialization code
    languagegroup = ""; //this is an empty string, it is NOT missing data (null)
    scriptgroup = "";
}


<form id="theform" method="post">
    <div class="row">
        <div class="offset-1">
            <label id="LanguageGrouplbl">Select your favourite programming language.</label><br />
            <input type="radio" id="LanguageGroup" name="LanguageGroup"
                   value="C#" 
                    checked="@(languagegroup.Equals("C#")?true:false)"/>C#<br />
            <input type="radio" id="LanguageGroup" name="LanguageGroup"
                   value="VisualBasic" 
                   checked="@(languagegroup.Equals("VisualBasic")?true:false)"/>Visual Basic<br />
            <input type="radio" id="LanguageGroup" name="LanguageGroup"
                   value="Fortran" 
                   checked="@(languagegroup.Equals("Fortran")?true:false)"/>Fortran<br />
            <input type="radio" id="LanguageGroup" name="LanguageGroup"
                   value="Cobol" 
                   checked="@(languagegroup.Equals("Cobol")?true:false)"/>Cobol<br />
            <input type="radio" id="LanguageGroup" name="LanguageGroup"
                   value="ObjectiveC" 
                   checked="@(languagegroup.Equals("ObjectiveC")?true:false)"/>ObjectiveC<br /><br />
            <label id="ScriptGrouplbl">Select your favourite scripting code.</label><br />
            <input type="radio" id="ScriptGroup" name="ScriptGroup"
                   value="Javascript" 
                   checked="@(scriptgroup.Equals("Javascript")?true:false)"/>Javascript<br />
            <input type="radio" id="ScriptGroup" name="ScriptGroup"
                   value="Razor" 
                   checked="@(scriptgroup.Equals("Razor")?true:false)"/>Razor<br />
            <input type="radio" id="ScriptGroup" name="ScriptGroup"
                   value="PHP" 
                   checked="@(scriptgroup.Equals("PHP")?true:false)"/>PHP<br />
        </div>
    </div>
    <div class="row">
        <div class="offset-1">
            <button type="submit" id="theButton" name="theButton"
                    value="Submit" class="btn btn-primary">
                Submit
            </button>
        </div>
    </div>
</form>